        <div id="conversations" class="conversations-list list-group clearfix"> 
        {{ include('@ZikulaIntercomModule/Layouts/Classic/inbox/conversation.list.html.twig') }}
        </div>    
        {{ include("@ZikulaIntercomModule/Layouts/Classic/inbox/footer.html.twig") }}
