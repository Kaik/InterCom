<div data-id="{{ message.id }}" class="conversation list-group-item clearfix">
    <div class="row">
        <div class="col-xs-9 col-md-6">
            <div class="row">
                <div class="col-md-4 date text-muted small"><i class="fa fa-clock-o"> </i> {{ message.createdAt|time_diff }}</div>
                <span class="subject">
                    {# @todo ajax version remove this and add data-toggle=collapse #}
                    <a
                        {#                        href="{{ path('zikulaintercommodule_messages_readmessage', {'message': message.id }) }}"#}
                        data-toggle="collapse"
                        data-seen="{#{{ message.seen is empty ? "false" : "true" }}#}"
                        data-id="{{ message.id }}"
                        class="conversation-details"
                        data-target="#conversation-body-{{ message.id }}">
                        {{ message.subject|truncate(25, true, "...")|capitalize }}
                    </a>
                </span>
            </div>
        </div>
        <div class="recipients col-xs-9 col-md-5">
            {{ include('@ZikulaIntercomModule/Layouts/Classic/sent/recipients.html.twig') }}
        </div>
        <div class="details col-md-12 clearfix" style="clear:both;">
            <div id="conversation-body-{{ message.id }}" class="row collapse" >
                {{ include('@ZikulaIntercomModule/Layouts/Classic/inbox/message.content.html.twig') }}
                {{ include('@ZikulaIntercomModule/Layouts/Classic/draft/message.options.html.twig') }}
            </div>
        </div>
    </div>
</div>